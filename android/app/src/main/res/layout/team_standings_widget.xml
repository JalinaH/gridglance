<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="36dp"
            android:layout_height="3dp"
            android:background="@drawable/widget_accent"
            android:text="" />

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-condensed"
            android:includeFontPadding="false"
            android:text="Team"
            android:textAllCaps="true"
            android:textColor="#F7F8FA"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:id="@+id/widget_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_pill"
            android:includeFontPadding="false"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="----"
            android:textColor="#B8C0CC"
            android:textSize="9sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:includeFontPadding="false"
        android:text="Top 3 teams"
        android:textColor="#9EA7B5"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_row_highlight"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/pos_one"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/widget_badge_primary"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="Team One - 413 pts"
                android:textColor="#F7F8FA"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/widget_row_plain"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/pos_two"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/widget_badge_secondary"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="2"
                android:textColor="#B8C0CC"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="Team Two - 370 pts"
                android:textColor="#DCE1EA"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/widget_row_plain"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/pos_three"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/widget_badge_secondary"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="3"
                android:textColor="#B8C0CC"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="Team Three - 312 pts"
                android:textColor="#DCE1EA"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
